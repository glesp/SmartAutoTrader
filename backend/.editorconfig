root = true

[*.cs]

# === Formatting/Spacing Rules ===
dotnet_diagnostic.SA1003.severity = none  # Ignore whitespace around operators
dotnet_diagnostic.SA1010.severity = none  # Ignore spacing around square brackets
dotnet_diagnostic.SA1024.severity = none  # Ignore spacing after colon

csharp_space_around_binary_operators = ignore
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_between_method_call_name_and_opening_parenthesis = false
csharp_space_between_method_declaration_name_and_open_parenthesis = false
csharp_space_between_parentheses = false
csharp_space_between_brackets = false

# === Layout/Ordering Rules ===
dotnet_diagnostic.SA1201.severity = none  # Ignore member ordering
dotnet_diagnostic.SA1202.severity = none
dotnet_diagnostic.SA1402.severity = none  # Ignore single-file per type

# === Readability & Style ===
dotnet_diagnostic.SA1101.severity = none  # Don't force 'this.'
dotnet_diagnostic.SA1309.severity = none  # Ignore underscore prefix
dotnet_diagnostic.SA1413.severity = none  # Trailing comma rule

# === Documentation ===
dotnet_diagnostic.SA1600.severity = none
dotnet_diagnostic.SA1604.severity = none
dotnet_diagnostic.SA1633.severity = none
dotnet_diagnostic.SA1649.severity = none

# === General Behavior ===
dotnet_analyzer_diagnostic.severity = warning
