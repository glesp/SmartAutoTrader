# Top-most EditorConfig file
root = true

[*.cs]

# === Documentation Rules ===
dotnet_diagnostic.SA1600.severity = none      # Elements must be documented
dotnet_diagnostic.SA1604.severity = none      # Documentation must have summary
dotnet_diagnostic.SA1633.severity = none      # File must have header
dotnet_diagnostic.SA1649.severity = none      # File name should match first type name

# === Naming Rules ===
dotnet_diagnostic.SA1309.severity = none      # Field names should not begin with underscore

# === Readability Rules ===
dotnet_diagnostic.SA1101.severity = none      # Prefix local calls with 'this.'
dotnet_diagnostic.SA1122.severity = none      # Use string.Empty for empty strings

# === Layout Rules ===
dotnet_diagnostic.SA1503.severity = none      # Braces should not be omitted
dotnet_diagnostic.SA1507.severity = none      # Blank line should not be followed by blank line
dotnet_diagnostic.SA1508.severity = none      # Closing brace must not be followed by blank line
dotnet_diagnostic.SA1512.severity = none      # Single-line comment must not be followed by blank line

# === Ordering Rules ===
dotnet_diagnostic.SA1200.severity = none      # Using directives must appear inside namespace
dotnet_diagnostic.SA1210.severity = none      # Using directives must be ordered
dotnet_diagnostic.SA1216.severity = none      # Static using directives must be ordered

# === Arithmetic Precedence ===
dotnet_diagnostic.SA1407.severity = none      # Arithmetic expressions must declare precedence explicitly
dotnet_diagnostic.SA1408.severity = none      # Conditional expressions must declare precedence explicitly

# === General ===
dotnet_analyzer_diagnostic.severity = warning
